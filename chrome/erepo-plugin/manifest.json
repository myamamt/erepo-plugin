{
	"manifest_version": 2,
	"name": "Error Repository Plugin",
	"version": "1.0.0",

    "permissions": [
        "tabs",
        "background",
        "storage"
    ],

    "background": {
        "scripts": [ "background.js" ],
        "persistent": false
    },

	"content_scripts": [{
		"matches": [ "<all_urls>" ],
    	"js": [ "script.js" ],
    	"run_at": "document_start"
	}],

    "browser_action": {
        "default_icon": "icon.png"
    },

    "options_page": "options.html"
}
